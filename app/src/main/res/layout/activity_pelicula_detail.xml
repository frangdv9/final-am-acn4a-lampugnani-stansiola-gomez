<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pelicula_detail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#D8D8D8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/containerNavbar"
            android:layout_width="416dp"
            android:layout_height="83dp"
            android:background="#FAFAFA"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgLogoNav"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="45dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo"
                tools:layout_marginStart="45dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerDescripcionPelicula"
            android:layout_width="413dp"
            android:layout_height="342dp"
            android:layout_marginTop="1dp"
            android:background="#FAFAFA"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="30dp"
            android:paddingEnd="20dp"
            android:paddingBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerPortada"
            tools:circularflow_radiusInDP="20dp">

            <TextView
                android:id="@+id/txtSinopsisTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sinopsis"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSinopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="La historia de Tim Ballard, un exagente del gobierno de Estados Unidos, que renuncia a su trabajo para dedicar su vida a salvar a los niÃ±os de los traficantes sexuales mundiales." />

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="Nombre: SONIDOS DE LIBERTAD"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genero: DRAMA"
                android:textStyle="bold"
                tools:paddingBottom="5dp" />

            <TextView
                android:id="@+id/txtClasificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Clasificacion: 13 C/R"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:text="Fecha de estreno: 30/10/2023"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnVerFunciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ver Funciones" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerPortada"
            android:layout_width="407dp"
            android:layout_height="302dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/containerDescripcionPelicula"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerNavbar">

            <TextView
                android:id="@+id/txtTituloPelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="SONIDOS DE LIBERTAD"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/imgPortadaPelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/pelicula_foto_prueba" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>