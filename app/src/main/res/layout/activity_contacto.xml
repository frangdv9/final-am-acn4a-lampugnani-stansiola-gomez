<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8"
    android:elevation="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/containerDescripcionPelicula"
        android:layout_width="408dp"
        android:layout_height="307dp"
        android:background="#FAFAFA"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:paddingEnd="20dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar"
        tools:circularflow_radiusInDP="20dp">

        <TextView
            android:id="@+id/contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacto"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSinopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Para cualquier duda o consulta les dejamos nuestros medios de contacto:" />


        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="Telefono: 5236-666"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccion: Avenida Corrientes 2037"
            android:textStyle="bold"
            tools:paddingBottom="5dp" />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Mail: clicktix@contacto.com.ar"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtContacto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Gracias por utilizar nuestra app!" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="411dp"
        android:layout_height="103dp"
        android:background="#FAFAFA"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/id_menuHamb_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            app:srcCompat="@drawable/menu_hambur" />

        <ImageView
            android:id="@+id/id_logo_tickets"
            android:layout_width="554dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo"
            android:clickable="true"
            android:onClick="openMainActivity" />

        <ImageView
            android:id="@+id/id_perfil_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            app:srcCompat="@drawable/perfil" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#FAFAFA"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/id_tickets"
            android:layout_width="36dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:padding="15dp"
            app:srcCompat="@drawable/tickets" />

        <ImageView
            android:id="@+id/id_soporte"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_weight="1"
            android:padding="13dp"
            app:srcCompat="@drawable/soporte" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>